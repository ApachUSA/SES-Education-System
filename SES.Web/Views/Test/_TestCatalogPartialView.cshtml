@model List<Test>

@foreach (var item in Model)
{
	<div class="catalog_card d-flex flex-column justify-content-between">
		<div class="catalog_year catalog_item_padding d-flex flex-row justify-content-between">
			<span class="fw-bold">Рік:</span>
			<span>@item.Year</span>
		</div>
		<div class="catalog_position catalog_item_padding  d-flex flex-row justify-content-between">
			<span class="fw-bold">Посада:</span>
			<span>@item.Position?.Name</span>
		</div>
		<div class="catalog_questtime catalog_item_padding  d-flex flex-row justify-content-between">
			<span class="fw-bold">Питань:</span>
			<span style="margin-right: 50px">@item.Questions?.Count()</span>

			<span class="fw-bold">Час:</span>
			<span>@item.Questions?.Count() хв</span>
		</div>

		<div class="catalog_btn  d-flex flex-row justify-content-around align-items-center">
				@*<a onclick="" class="main_button" style="width: 100%; height: 40px"><span>Обрати</span></a>*@
			<a class="edit_icon" style="font-size: 20px" onclick="TestEdit(@item.Test_ID)"><i class="bi bi-pencil-square"></i></a>
			<a class="delete_icon" style="font-size: 20px" onclick="TestDelete(@item.Test_ID)"><i class="bi bi-trash3-fill"></i></a>
		</div>
	</div>
}



